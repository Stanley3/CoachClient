<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <FrameLayout
            android:id="@+id/fl_fragmentRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            />

        <LinearLayout
            android:id="@+id/bottomList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/bottomItemCurrentBg1"
                style="@style/main_bottom_item" >

                <RadioButton
                    android:id="@+id/rb_order"
                    style="@style/footbar"
                    android:drawableTop="@drawable/foot_order_normal"
                    android:paddingTop="8dp"
            		android:background="@drawable/footbar_background"
                   />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomItemCurrentBg2"
                style="@style/main_bottom_item" >

                <RadioButton
                    android:id="@+id/rb_evaluate"
                    style="@style/footbar"
                    android:drawableTop="@drawable/foot_pingjia_normal"
                    android:paddingTop="8dp"
                    android:background="@drawable/footbar_background"
                     />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomItemCurrentBg3"
                style="@style/main_bottom_item" >

                <RadioButton
                    android:id="@+id/rb_finance"
                    style="@style/footbar"
                    android:drawableTop="@drawable/foot_money_normal"
                    android:paddingTop="8dp"
                    android:background="@drawable/footbar_background"
                     />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomItemCurrentBg4"
                style="@style/main_bottom_item" >

                <RadioButton
                    android:id="@+id/rb_turn"
                    style="@style/footbar"
                    android:drawableTop="@drawable/foot_paiban_normal"
                    android:paddingTop="8dp"
                    android:background="@drawable/footbar_background"
                    />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
